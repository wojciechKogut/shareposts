<h1 style="font-family: lato, sans-serif">Edit Story</h1>

<div class="row">
    <form action="/stories/{{story.id}}?_method=PUT" method="post" class="col s12">
        {{!-- <input type="hidden" name="_method" value="PUT"> --}}
        <div class="row">
            <div class="input-field">
                <input type="text" value="{{story.title}}" name="title" id="">
                <label for="title">Title</label>
            </div>
        </div>
        <div class="row">
            <div class="input-field">
                <select name="status" id="">
                   {{#select story.status}}
                    <option value="public" >Public</option>
                    <option value="private">Private</option>
                    <option value="unpublished">Unpublished</option>
                    {{/select}}
                </select>
                <label for="status">Status</label>
            </div>
        </div>

        <div class="row">
            <p>
                <input type="checkbox" name="allowComments" class="filled-in" id="filled-in-box" {{#if story.alloComments}} checked="checked" {{/if}}>
                <label for="filled-in-box">Allow Comments</label>
            </p>
        </div>
 
        <div class="row">
            <div class="input-field">
                <textarea name="body" id="" cols="30" rows="10">{{story.body}}</textarea>
                <h5>Tell us your story:</h5>
            </div>
        </div>
        <input type="submit" value="Save" class="btn">
    </form>
</div>  