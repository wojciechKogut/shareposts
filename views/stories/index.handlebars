<h1>Stories</h1>
<div class="row">
    {{#each stories}}
        <div class="col s12 m4">
            <div class="card">
                <div class="card-image">
                   {{#if user}}
                        {{{editIcon user.id ../user.id id}}}
                   {{/if}}
                </div>
                <div style="overflow-x:hidden" class="card-content center-align">
                    <h5>{{title}}</h5>
                    <p class="story-text">{{truncate body}}</p>
                    <br>
                    <div class="chip">
                        <img src="{{user.image}}" alt="Contact person">
                        <a href="/stories/user/{{user.id}}">{{user.firstName}}  {{user.lastName}}</a>
                    </div>
                </div>
                <div class="card-action center-align">
                   <a  class="btn grey" style="color:white" href="/stories/show/{{id}}"> Read</a>
                </div>
            </div>
        </div>
    {{else}}
        <p>No stories found</p>
    {{/each}}
</div>